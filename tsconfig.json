{
  "compilerOptions": {
    "jsx": "react",
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "es6"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}
